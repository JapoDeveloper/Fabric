<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/navBarHeader">

    <ImageView
        android:background="@drawable/nav_header_back"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:elevation="2dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_gradient"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:padding="@dimen/default_margin_normal"
        android:elevation="6dp">
       <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="User name here"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/userEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User email address here" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_normal">

        <TextView
            android:id="@+id/userPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User points"
            android:textAlignment="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/userChallengesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User challenges count"
            android:textAlignment="center"
            android:layout_weight="1"/>
    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="@dimen/user_photo_size_sm"
        android:layout_height="@dimen/user_photo_size_sm"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/default_avatar"
        android:layout_marginTop="@dimen/default_margin_normal"
        android:elevation="12dp"/>
</FrameLayout>
