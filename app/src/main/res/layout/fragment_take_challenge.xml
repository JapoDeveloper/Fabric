<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_margin="@dimen/activity_vertical_margin"
    tools:context="co.japo.fabric.ui.fragments.TakeChallengeFragment">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/challengeLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/challengePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/challengePhoto"
        style="@style/thumbnail_lg"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/challengeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description text"/>

    <FrameLayout
        android:id="@+id/challengeOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">
    </FrameLayout>
        <ImageButton
            android:id="@+id/sendChallengeResponse"
            android:src="@drawable/ic_send"
            style="@style/submitButton"
            android:layout_gravity="end"
            android:text="@string/submit"            />

    </LinearLayout>
</android.support.v7.widget.CardView>

</FrameLayout>
