<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.japo.fabric.ui.fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="@dimen/user_photo_size_lg"
        android:layout_height="@dimen/user_photo_size_lg"
        android:layout_marginTop="50dp"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/profile_userPhoto"
            android:layout_width="@dimen/user_photo_size_lg"
            android:layout_height="@dimen/user_photo_size_lg"
            android:src="@mipmap/ic_launcher_round"
            android:elevation="4dp"
            app:fabSize="mini"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/changeUserPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">
        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/profile_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="User name here"/>

            <TextView
                android:id="@+id/profile_userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email here"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/profile_userPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone here"
                android:textAlignment="center"/>
        </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/profile_userLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Level here"
                android:layout_weight="1"
                style="@style/statisticalLabels"/>

            <TextView
                android:id="@+id/profile_userPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Points here"
                android:layout_weight="1"
                style="@style/statisticalLabels"/>

            <TextView
                android:id="@+id/profile_userChallengesCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Challenges count here"
                android:layout_weight="1"
                style="@style/statisticalLabels"/>
</LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>



</FrameLayout>